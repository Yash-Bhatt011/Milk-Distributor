<div class="container text-center py-5">
  <h1 class="display-1 text-danger">500</h1>
  <h2 class="mb-4">Server Error</h2>
  
  <% if (process.env.NODE_ENV === 'development' && message) { %>
    <div class="alert alert-danger">
      <%= message %>
    </div>
  <% } else { %>
    <p class="lead">Something went wrong on our end. Please try again later.</p>
  <% } %>

  <div class="mt-4">
    <a href="/" class="btn btn-primary">
      <i class="fas fa-home me-2"></i>Return to Home
    </a>
    <button onclick="window.location.reload()" class="btn btn-secondary ms-2">
      <i class="fas fa-sync me-2"></i>Try Again
    </button>
  </div>
</div>
